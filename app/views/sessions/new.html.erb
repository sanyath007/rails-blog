<div class="container my-5">
  <p id="alert"><%= alert %></p>

  <h1>Login</h1>

  <%= form_tag sessions_path do |form| %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email, "", {:class => "form-control"} %>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, "", {:class => "form-control"} %>
    </div>

    <div class="form-group">
      <%= submit_tag "Login", {:class => "btn btn-primary"} %>
    </div>

  <% end %>
</div>
