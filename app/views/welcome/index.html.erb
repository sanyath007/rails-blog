<div class="container">
  <h1>Hello, Rails</h1>

  <% if current_user %>
    Logged in as <%= current_user.email %>
    <%= link_to "Log Out", logout_path %>
  <% else %>
    <%= link_to "Sign Up", signup_path %> | 
    <%= link_to "Log in", login_path %>
  <% end %>

  <p id="notice"><%= notice %></p>
</div>