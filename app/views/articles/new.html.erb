<div class="container">
  <h1>New Article</h1>
  <%= form_with scope: :article, url: articles_path, local: true do |form| %>
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </div>
    <div>
      <%= form.label :text %><br>
      <%= form.text_area :text %>
    </div>

    <%= form.submit %>
  <% end %>

  <%= link_to 'Back', articles_path %>
</div>