<div class="container">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= @article.title %></h5>
      <P class="card-text">
        <%= @article.text %>
      </p>
    </div>
  </div>

  <h2>Comments</h2>
  <%= render @article.comments %>

  <h2>Add a comment: </h2>
  <%= render 'comments/form' %>

  <%= link_to 'Back', articles_path %>
  <%= link_to 'Edit', edit_article_path(@article) %>
</div>
